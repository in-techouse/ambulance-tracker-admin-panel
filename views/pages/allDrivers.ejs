<% extend ('../layout')%>
<div class="row" style="padding:20px ;">
    <div class="col-md-12">
        <div class="responsive-table">
            <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Driver ID</th>
                        <th>Email</th>
                        <th>License Number</th>
                        <th>Phone Number</th>
                        <th>Edit</th>
                        <th>Detail</th>
                    </tr>
                </thead>
                <tbody>
                    <% drivers.forEach(driver => { %>
                    <tr>
                        <td>
                            <% if (driver.val().image && driver.val().image.length > 0) {%>
                            <img src="<%= driver.val().image %>" class="img-circle avatar" alt="<%= driver.val().firstName%>" style="width: 80px; height: 80px;"/>
                            <% } else {%>
                            <img src="/public/img/avatar.jpg" class="img-circle avatar" alt="<%= driver.val().firstName%>" style="width: 80px; height: 80px;"/>
                            <%}%>
                        </td>
                        <td><%=driver.val().firstName%> <%=driver.val().lastName%></td>
                        <td><%=driver.val().id %></td>
                        <td><%=driver.val().email %></td>
                        <td><%=driver.val().licenseNumber%></td>
                        <td><%=driver.val().phoneNumber%></td>
                        <td><a href="/admin/editdriver?id=<%= driver.val().id%>"
                                class="btn btn-warning btn-block">Edit</a></td>
                        <td><a href="/admin/driverdetail?id=<%= driver.val().id%>"
                                class="btn btn-primary btn-block">Detail</a>
                        </td>

                    </tr>
                    <%});%>
                </tbody>
            </table>
        </div>
    </div>
</div>