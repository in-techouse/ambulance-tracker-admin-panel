<% extend ('../layout')%>
<div class="row" style="padding: 20px;">
    <div class="col-md-12">

        <div class="responsive-table">
            <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Driver ID</th>
                        <th>Truck Model</th>
                        <th>Registration Number</th>
                        <th>Truck Capacity</th>
                        <th>Edit</th>
                        <th>Detail</th>
                    </tr>
                </thead>
                <tbody>
                    <% trucks.forEach(truck => {%>
                    <tr>
                        <td><%=truck.val().driverId%></td>
                        <td><%=truck.val().truckModel%></td>
                        <td><%=truck.val().registrationNumber%></td>
                        <td><%=truck.val().truckCapacity%></td>
                        <td><a href="/admin/edittruck?id=<%= truck.val().id%>"
                                class="btn btn-warning btn-block">Edit</a></td>
                        <td><a href="/admin/truckdetail?id=<%= truck.val().id%>"
                                class="btn btn-primary btn-block">Detail</a></td>
                    </tr>
                    <%});%>
                </tbody>
            </table>
        </div>
    </div>
</div>