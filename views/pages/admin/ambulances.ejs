<% extend ('../../layout')%>
<div class="row" style="padding: 20px;">
    <div class="col-md-12">

        <div class="responsive-table">
            <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Driver Phone Number</th>
                        <th>Ambulance Model</th>
                        <th>Registration Number</th>
                        <th>Edit</th>
                        <th>Detail</th>
                    </tr>
                </thead>
                <tbody>
                    <% ambulances.forEach(ambulance => {%>
                    <tr>
                        <td><%=ambulance.val().driverId%></td>
                        <td><%=ambulance.val().ambulanceModel%></td>
                        <td><%=ambulance.val().registrationNumber%></td>
                        <td><a href="/admin/editAmbulance?id=<%= ambulance.val().id%>"
                                class="btn btn-warning btn-block">Edit</a></td>
                        <td><a href="/admin/ambulanceDetail?id=<%= ambulance.val().id%>"
                                class="btn btn-primary btn-block">Detail</a></td>
                    </tr>
                    <%});%>
                </tbody>
            </table>
        </div>
    </div>
</div>